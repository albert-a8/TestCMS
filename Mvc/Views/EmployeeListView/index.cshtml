@using Kendo.Mvc.UI
@model SitefinityWebApp.Mvc.Models.EmployeeListViewModel

<label for="EmployeeTypes">Employee Types</label>
@(Html.Kendo().MultiSelect()
    .Name("EmployeeTypes")
    .Placeholder("Select employee type")
    .DataTextField("Key")
    .DataValueField("Value")
    .BindTo(Model.EmployeeClassification)
    .Events(events => events.Change("FilterEmployeeType"))
    .Deferred()
)
<br />
<div id="EmployeeListDiv">
</div>

<style>
    #listView {
        padding: 10px 5px; margin-bottom: -1px; min-height: 510px; font: inherit;
    }
    .employee {
        float: left; position: relative; width: 45%; margin: 0px 10px 10px 0px; padding: 0;
    }
        .employee h2 {
            margin: 0; padding: 0; overflow: hidden; line-height: 1.1em; font-size: 20px; font-weight: bold; text-transform: uppercase; color: #000;
        }
        .employee p {
            margin: 0; font-size: 12px; font-weight: normal; color: #000;
        }
</style>